    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >
    <Button
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:id="@+id/sendalert"
        android:layout_width="match_parent"
        android:textColor="@color/colorIcons"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:onClick="onAlertClick"
        android:text="Send Alert message" />

       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >
    <Button
        android:layout_width="match_parent"
        android:layout_marginBottom="10px"
        android:layout_marginTop="10px"
        android:layout_height="match_parent"
        android:text="Send safety message"
        android:id="@+id/sendsafe"
        android:textColor="@color/colorIcons"
        android:onClick="onSafeClick"
        android:background="@color/colorAccent"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Location"
            android:background="@color/colorAccent"
            android:id="@+id/button3"
            android:onClick="callmapactivity"
            android:textColor="@color/colorIcons"
            android:layout_alignStart="@+id/sendsafe" />
    </LinearLayout>

</LinearLayout>